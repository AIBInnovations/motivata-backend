<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Redeem Tickets - <%= event.name %></title>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, sans-serif;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      min-height: 100vh;
      padding: 20px;
    }

    .container {
      max-width: 500px;
      margin: 0 auto;
    }

    .card {
      background: white;
      border-radius: 16px;
      box-shadow: 0 10px 40px rgba(0,0,0,0.2);
      overflow: hidden;
    }

    .header {
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      padding: 24px;
      text-align: center;
    }

    .header h1 {
      font-size: 1.5rem;
      margin-bottom: 8px;
    }

    .header .event-name {
      font-size: 1.1rem;
      opacity: 0.9;
    }

    .header .event-date {
      font-size: 0.85rem;
      opacity: 0.8;
      margin-top: 4px;
    }

    .form-body {
      padding: 24px;
    }

    .ticket-info {
      background: #f8f9fa;
      border-radius: 8px;
      padding: 12px 16px;
      margin-bottom: 20px;
      text-align: center;
      color: #666;
    }

    .ticket-info strong {
      color: #667eea;
    }

    .attendee-section {
      margin-bottom: 20px;
      padding: 16px;
      background: #f8f9fa;
      border-radius: 8px;
      border-left: 4px solid #667eea;
    }

    .attendee-title {
      font-weight: 600;
      color: #333;
      margin-bottom: 12px;
      font-size: 0.95rem;
    }

    .form-group {
      margin-bottom: 12px;
    }

    .form-group:last-child {
      margin-bottom: 0;
    }

    label {
      display: block;
      font-size: 0.85rem;
      color: #555;
      margin-bottom: 4px;
      font-weight: 500;
    }

    input {
      width: 100%;
      padding: 12px;
      border: 1px solid #ddd;
      border-radius: 8px;
      font-size: 1rem;
      transition: border-color 0.2s, box-shadow 0.2s;
    }

    input:focus {
      outline: none;
      border-color: #667eea;
      box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.1);
    }

    input::placeholder {
      color: #aaa;
    }

    .voucher-section {
      margin-top: 20px;
      padding-top: 20px;
      border-top: 1px dashed #ddd;
    }

    .voucher-section label {
      color: #666;
    }

    .btn {
      width: 100%;
      padding: 14px;
      background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      color: white;
      border: none;
      border-radius: 8px;
      font-size: 1rem;
      font-weight: 600;
      cursor: pointer;
      margin-top: 20px;
      transition: transform 0.2s, box-shadow 0.2s;
    }

    .btn:hover {
      transform: translateY(-2px);
      box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
    }

    .btn:active {
      transform: translateY(0);
    }

    .btn:disabled {
      opacity: 0.7;
      cursor: not-allowed;
      transform: none;
    }

    .error-message {
      background: #fee;
      color: #c00;
      padding: 12px;
      border-radius: 8px;
      margin-bottom: 16px;
      font-size: 0.9rem;
      display: none;
    }

    .success-message {
      background: #efe;
      color: #060;
      padding: 16px;
      border-radius: 8px;
      text-align: center;
      display: none;
    }

    .success-message h3 {
      margin-bottom: 8px;
    }

    .loading {
      display: inline-block;
      width: 20px;
      height: 20px;
      border: 2px solid #fff;
      border-radius: 50%;
      border-top-color: transparent;
      animation: spin 0.8s linear infinite;
      margin-right: 8px;
      vertical-align: middle;
    }

    @keyframes spin {
      to { transform: rotate(360deg); }
    }

    .footer {
      text-align: center;
      padding: 16px;
      color: rgba(255,255,255,0.8);
      font-size: 0.85rem;
    }

    .footer a {
      color: white;
      text-decoration: none;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="card">
      <div class="header">
        <h1>Redeem Your Tickets</h1>
        <div class="event-name"><%= event.name %></div>
        <div class="event-date"><%= new Date(event.startDate).toLocaleDateString('en-IN', { weekday: 'long', year: 'numeric', month: 'long', day: 'numeric' }) %></div>
      </div>

      <div class="form-body">
        <div class="ticket-info">
          You have <strong><%= ticketCount %> ticket<%= ticketCount > 1 ? 's' : '' %></strong> to redeem
        </div>

        <div class="error-message" id="errorMessage"></div>

        <div class="success-message" id="successMessage">
          <h3>Tickets Redeemed Successfully!</h3>
          <p>QR codes have been sent to the registered phone numbers via WhatsApp.</p>
        </div>

        <form id="redeemForm">
          <input type="hidden" name="offlineCashId" value="<%= offlineCashId %>">

          <% for(let i = 0; i < ticketCount; i++) { %>
          <div class="attendee-section">
            <div class="attendee-title">Attendee <%= i + 1 %><%= i === 0 ? ' (Primary)' : '' %></div>

            <div class="form-group">
              <label for="name_<%= i %>">Full Name *</label>
              <input
                type="text"
                id="name_<%= i %>"
                name="attendees[<%= i %>][name]"
                placeholder="Enter full name"
                required
                <% if(i === 0) { %>autofocus<% } %>
              >
            </div>

            <div class="form-group">
              <label for="phone_<%= i %>">Phone Number *</label>
              <input
                type="tel"
                id="phone_<%= i %>"
                name="attendees[<%= i %>][phone]"
                placeholder="10-digit mobile number"
                pattern="[0-9]{10}"
                maxlength="10"
                required
                <% if(i === 0) { %>value="<%= phone %>"<% } %>
              >
            </div>
          </div>
          <% } %>

          <div class="voucher-section">
            <div class="form-group">
              <label for="voucherCode">Voucher / Coupon Code (Optional)</label>
              <input
                type="text"
                id="voucherCode"
                name="voucherCode"
                placeholder="Enter code if you have one"
                style="text-transform: uppercase;"
              >
            </div>
          </div>

          <button type="submit" class="btn" id="submitBtn">
            Redeem Tickets
          </button>
        </form>
      </div>
    </div>

    <div class="footer">
      Powered by <a href="https://motivata.in">Motivata</a>
    </div>
  </div>

  <script>
    const form = document.getElementById('redeemForm');
    const submitBtn = document.getElementById('submitBtn');
    const errorMessage = document.getElementById('errorMessage');
    const successMessage = document.getElementById('successMessage');

    form.addEventListener('submit', async (e) => {
      e.preventDefault();

      // Hide previous messages
      errorMessage.style.display = 'none';
      successMessage.style.display = 'none';

      // Disable button and show loading
      submitBtn.disabled = true;
      submitBtn.innerHTML = '<span class="loading"></span>Processing...';

      // Build attendees array
      const formData = new FormData(form);
      const attendees = [];

      for (let i = 0; i < <%= ticketCount %>; i++) {
        attendees.push({
          name: formData.get(`attendees[${i}][name]`),
          phone: formData.get(`attendees[${i}][phone]`)
        });
      }

      const payload = {
        offlineCashId: formData.get('offlineCashId'),
        attendees: attendees,
        voucherCode: formData.get('voucherCode') || undefined
      };

      try {
        const response = await fetch('/api/app/tickets/redeem', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify(payload)
        });

        const result = await response.json();

        if (response.ok && result.status === 200) {
          // Success
          form.style.display = 'none';
          successMessage.style.display = 'block';

          if (result.data.errors && result.data.errors.length > 0) {
            successMessage.innerHTML = `
              <h3>Tickets Partially Redeemed</h3>
              <p>${result.data.enrollmentsCreated} ticket(s) created successfully.</p>
              <p style="color: #c00; margin-top: 8px;">Some issues: ${result.data.errors.map(e => e.error).join(', ')}</p>
            `;
          }
        } else {
          // Error
          errorMessage.textContent = result.message || 'Something went wrong. Please try again.';
          errorMessage.style.display = 'block';
          submitBtn.disabled = false;
          submitBtn.innerHTML = 'Redeem Tickets';
        }
      } catch (error) {
        errorMessage.textContent = 'Network error. Please check your connection and try again.';
        errorMessage.style.display = 'block';
        submitBtn.disabled = false;
        submitBtn.innerHTML = 'Redeem Tickets';
      }
    });

    // Phone number validation - only allow digits
    document.querySelectorAll('input[type="tel"]').forEach(input => {
      input.addEventListener('input', (e) => {
        e.target.value = e.target.value.replace(/\D/g, '').slice(0, 10);
      });
    });
  </script>
</body>
</html>
