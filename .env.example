# Server Configuration
PORT=5000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/motivata

# JWT Configuration
JWT_ACCESS_SECRET=your-access-secret-key-change-in-production
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# CORS Configuration (comma-separated for multiple origins)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# Razorpay Configuration
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret
# Webhook secret from Razorpay Dashboard > Settings > Webhooks
# If not set, will fall back to RAZORPAY_KEY_SECRET
RAZORPAY_WEBHOOK_SECRET=your_razorpay_webhook_secret

# Frontend URL for payment callbacks
FRONTEND_URL=http://localhost:3000

# Email Configuration (Nodemailer)
# For Brevo (Recommended for production): EMAIL_HOST=smtp-relay.brevo.com
# For Gmail: EMAIL_HOST=smtp.gmail.com (requires App Password from https://myaccount.google.com/apppasswords)
EMAIL_HOST=smtp-relay.brevo.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your-brevo-login@smtp-brevo.com
EMAIL_PASSWORD=your-brevo-password
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=Motivata

# WhatsApp Configuration (DakshConnect API)
# Get these from your DakshConnect dashboard
WHATSAPP_API_KEY=your-whatsapp-api-key
WHATSAPP_ACCOUNT_ID=your-account-id-uuid
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id